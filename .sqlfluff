[sqlfluff]
dialect = postgres
templater = jinja
exclude_rules = L031,L034  # allow some explicit casting & wildcards during prototyping
max_line_length = 120

[sqlfluff:rules:L016]
# line length relaxed but still prefer shorter lines
max_line_length = 120

[sqlfluff:rules:L003]
# Indentation
indent_unit = space
tab_space_size = 2
